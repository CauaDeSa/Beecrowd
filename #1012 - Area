#include <stdio.h>
 
int main() {
 
    float A, B, C, triangle, circle, trapezium, square, rectangle;
    
    scanf("%f%f%f", &A, &B, &C);
    
    triangle = A * C / 2;
    circle = 3.14159 * C * C;
    trapezium = (A + B) * C / 2;
    square = B * B; 
    rectangle = A * B;
    
    printf("TRIANGULO: %.3f\nCIRCULO: %.3f\nTRAPEZIO: %.3f\nQUADRADO: %.3f\nRETANGULO: %.3f\n", triangle, circle, trapezium, square, rectangle);
 
    return 0;
}
