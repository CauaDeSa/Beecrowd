#include <stdio.h>
 
int main(){
    int test_cases, members, i, result;

    scanf("%d", &test_cases);
 
    while (test_cases != 0)
    {
        for (i = 0; i < test_cases; i++)
        {   
            scanf("%d", &members);

            if (members % 2 == 0)
                result = (members * 2) - 2;

            else
                result = (members * 2) - 1;

            printf("%d\n", result);
        }

        scanf("%d", &test_cases);
    }
    
    return 0;
} 
