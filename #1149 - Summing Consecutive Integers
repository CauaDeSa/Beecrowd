#include <stdio.h>
 
int main(){
    int a, n, sum = 0;

    scanf("%d", &a);

    do
    {
        scanf("%d", &n);
    } while (n < 1);
    
    while (a != 0)
    {
        sum += a--;
    }

    n = n - 1;
    
    while (n != 0)
    {
        sum += n--;
    }

    printf("%d\n", sum);

    return 0;
}
